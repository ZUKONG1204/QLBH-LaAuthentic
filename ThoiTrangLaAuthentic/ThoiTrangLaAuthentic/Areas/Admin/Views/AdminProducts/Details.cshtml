@model ThoiTrangLaAuthentic.Models.Products

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <a asp-area="Admin" asp-controller="AdminProducts" asp-action="Index" class="breadcrumb-item">Danh sách sản phẩm</a>
            <span class="breadcrumb-item active">Thông tin sản phẩm</span>
        </nav>
    </div>
</div>
<div class="page-header no-gutters has-tab">
    <div class="d-md-flex m-b-15 align-items-center justify-content-between">
        <div class="media align-items-center m-b-15">
            <div class="avatar avatar-image rounded" style="height:70px; width:70px">
                <img src="~/images/products/@Model.Thumb" alt="@Model.Title" />
            </div>
            <div class="m-l-15">
                <h4 class="m-b-0">@Model.ProductName</h4>
                <p class="text-muted m-b-0">ID: #@Model.ProductId</p>
            </div>
        </div>
        <div class="m-b-15">
            <a class="btn btn-primary" asp-area="Admin" asp-controller="AdminProducts" asp-action="Edit" asp-route-id="@Model.ProductId">Sửa đổi</a>
        </div>
    </div>
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#product-overview">Over View</a>
        </li>
        <li>
            <a class="nav-link" data-toggle="tab" href="#product-images">Ảnh đại diện</a>
        </li>
    </ul>
</div>
<div class="container-fluid">
    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="product-overview">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Thông tin sản phẩm : @Model.ProductName</h4>
                    <div class="table-responsive">
                        <table class="product-info-table m-t-20">
                            <tbody>
                                <tr>
                                    <td>Tên danh mục: </td>
                                    <td class="text-dark font-weight-semibold">@Model.ProductName</td>
                                </tr>
                                <tr>
                                    <td>Alias</td>
                                    <td>@Model.Alias</td>
                                </tr>
                                <tr>
                                    <td>Mô tả ngắn:</td>
                                    <td>@Model.ShortDesc</td>
                                </tr>
                                <tr>
                                    <td>Giá:</td>
                                    <td>@Model.Price</td>
                                </tr>
                                <tr>
                                    <td>Discount:</td>
                                    <td>@Model.Discount</td>
                                </tr>
                                <tr>
                                    <td>Trạng thái:</td>
                                    <td>
                                        @if (Model.Active)
                                        {
                                            <div class="switch m-r-10">
                                                <input type="checkbox" id="switch-1" checked="" disabled />
                                                <label for="switch-1"></label>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="switch m-r-10">
                                                <input type="checkbox" id="switch-1" disabled />
                                                <label for="switch-1"></label>
                                            </div>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td>Bestseller:</td>
                                    <td>
                                        @if (Model.BestSellers)
                                        {
                                            <div class="switch m-r-10">
                                                <input type="checkbox" id="switch-1" checked="" disabled />
                                                <label for="switch-1"></label>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="switch m-r-10">
                                                <input type="checkbox" id="switch-1" disabled />
                                                <label for="switch-1"></label>
                                            </div>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td>HomeFlag:</td>
                                    <td>
                                        @if (Model.HomeFlag)
                                        {
                                            <div class="switch m-r-10">
                                                <input type="checkbox" id="switch-1" checked="" disabled />
                                                <label for="switch-1"></label>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="switch m-r-10">
                                                <input type="checkbox" id="switch-1" disabled />
                                                <label for="switch-1"></label>
                                            </div>
                                        }

                                    </td>
                                </tr>
                                <tr>
                                    <td>Danh mục:</td>
                                    <td>@Model.Cat.CatName</td>
                                </tr>
                                <tr>
                                    <td>Ngày tạo:</td>
                                    <td>@Model.DateCreated</td>
                                </tr>
                                <tr>
                                    <td>Ngày chỉnh sửa
                                    <td>
                                    <td>@Model.DateModified</td>
                                </tr>
                                <tr>
                                    <td>Tiêu đề:</td>
                                    <td>@Model.Title</td>
                                </tr>
                                <tr>
                                    <td>MetaDesc:</td>
                                    <td>@Model.MetaDesc</td>
                                </tr>
                                <tr>
                                    <td>MetaKey:</td>
                                    <td>@Model.MetaKey</td>
                                </tr>
                                <tr>
                                    <td>Tags:</td>
                                    <td>@Model.Tags</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Thông tin mô tả</h4>
                </div>
                <div class="card-body">
                    @Html.Raw(Model.Description)
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="product-images">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <img class="img-fluid" src="~/images/products/@Model.Thumb" alt="@Model.Title" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>